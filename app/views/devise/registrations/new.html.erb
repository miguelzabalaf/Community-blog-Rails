<div class="container mb-3 mt-5 text-center devise ">
  <%= link_to image_tag("logo-black.svg", class: 'mt-1 img-fluid logo-img'), root_path, class: 'logo' %>
  <h4 class="mt-3 font-weight-normal">Sign up to Blog</h4>
</div>
<div class="row mb-5">
  <div class="col-10 col-lg-4 col-md-6 m-auto">
    <div class="card bg-light p-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <form>
        <div class="form-group">
          <%= f.input :name, required: true, label: false, autofocus: true, placeholder: 'Your name' %>
        </div>
        <div class="form-group">
          <%= f.input :lastname, required: true, label: false, autofocus: true, placeholder: 'Your lastname' %>
        </div>
        <div class="form-group">
          <%= f.input :age, required: true, label: false, autofocus: true, placeholder: 'Your age' %>
        </div>
        <div class="form-group">
          <%= f.input :email, required: true, label: false, autofocus: true, placeholder: 'Your email' %>
        </div>
        <div class="form-group">
          <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, placeholder: 'Your password' %>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation, required: true, label: false, input_html: { autocomplete: "new-password" }, placeholder: 'Repeat password' %>
        </div>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="actions mb-3">
          <%= f.submit "Sign up", class:"btn btn-primary btn-lg btn-block" %>
        </div>
      </form>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
